{
  // TODO should reduce this to bare minimum and use equivalent eslint rules
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "newLine": "lf",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}

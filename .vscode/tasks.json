{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "commitizen",
      "type": "shell",
      "command": "git cz",
      "detail": "commit using commitizen CLI",
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "format",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "format-check",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ]
    },
  ]
}
